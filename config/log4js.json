{
  "appenders": {
    "prod": {
      "type": "file",
      "filename": "var/logs/prod.log",
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "dev": {
      "type": "file",
      "filename": "var/logs/dev.log",
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "error": {
      "type": "file",
      "filename": "var/logs/errors.log"
    },
    "errorsFilter": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "error"
    },
    "debugFilter": {
      "type": "logLevelFilter",
      "level": "DEBUG",
      "appender": "dev"
    },
    "prodFilter": {
      "type": "logLevelFilter",
      "level": "INFO",
      "appender": "prod"
    }
  },
  "categories": {
    "default": { "appenders": [ "prodFilter", "errorsFilter","debugFilter" ], "level": "DEBUG" }
  }
}
